<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="700.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="platformer.controller.RegisterController">
  <children>
    <GridPane hgap="10.0" prefHeight="420.0" prefWidth="670.0" vgap="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
      <children>
        <ImageView
                fx:id="imageView"
                fitHeight="120.0"
                fitWidth="100.0"
                layoutX="50.0"
                layoutY="83.0"
                pickOnBounds="true"
                preserveRatio="true"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
        >
          <image>
            <Image
                    url="/resources/images/register.png"
                    backgroundLoading="true"
            />
          </image>
        </ImageView>
        <Label text="Ninja Register" styleClass="title" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER">
          <font>
            <Font size="25.0" />
          </font>
        </Label>
        <Label text="Username:" styleClass="labelClass" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Password:" styleClass="labelClass" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="Confirm Password:" styleClass="labelClass" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="usernameTxt" id="usernameTxt" styleClass="inputClass" prefWidth="300.0" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordTxt" id="passwordTxt" styleClass="inputClass" prefWidth="300.0" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <PasswordField fx:id="repasswordTxt" id="repasswordTxt" styleClass="inputClass" prefWidth="300.0" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
